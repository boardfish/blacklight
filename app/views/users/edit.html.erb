<div class="container my-3">
    <h1>Account</h1>

    <div class="card">
      <div class="card-header">
        <%= react_component 'molecules/UserRepresentation',
            avatar: @user.avatar.attached? ? url_for(@user.avatar) : nil,
            user: @user
            %>
      </div>
      <div class="card-body">
        <%= render 'form', user: @user %>
      </div>
    </div>


    <%= link_to 'Show', @user %> |
    <%= link_to 'Back', users_path %>
</div>