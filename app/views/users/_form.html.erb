<%= bootstrap_form_with(model: user, local: true) do |form| %>
<% if user.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
        <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.check_box :maintainer,
                        custom: true,
                        label: 'I\'m a maintainer' %>
</div>

<div class="field">
    <%= form.check_box :enthusiast,
                        custom: true,
                        label: 'I\'m an enthusiast' %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>